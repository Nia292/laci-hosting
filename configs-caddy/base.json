{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information",
      "Microsoft.EntityFramework": "Warning",
      "System.IO": "Information",
      "LaciSynchroni.Services": "Information",
      "LaciSynchroni.Shared": "Information",
      "LaciSynchroni.StaticFilesServer": "Information",
      "LaciSynchroni.Server": "Information",
      "LaciSynchroni.Server.Services.SystemInfoService": "Warning"
    },
    "File": {
      "BasePath": "logs",
      "FileAccessMode": "KeepOpenAndAutoFlush",
      "FileEncodingName": "utf-8",
      "DateFormat": "yyyMMdd",
      "MaxFileSize": 104857600,
      "Files": [
        {
          "Path": "<date:yyyy>/<date:MM>/<date:dd>/laci-<date:HH>-<counter:0000>.log"
        }
      ]
    }
  },
  "LaciSynchroni": {
    "DbContextPoolSize": 512,
    "RedisPool": 50
  },
  "AllowedHosts": "*",
  "Kestrel": {},
  "IpRateLimiting": {},
  "IPRateLimitPolicies": {},
  "ForwardedHeaders": {
    "ForwardedHeaders": "XForwardedFor",
    "ForwardLimit": 1,
    "KnownNetworks": [
      // IPv4 loopback
      "127.0.0.0/8",
      // Caddy proxy (through docker network)
      "172.17. 0.0/16"
    ]
  }
}
